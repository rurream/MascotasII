<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cv_Mascotas_top"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertival_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/marjen_top">

        <ImageView
            android:id="@+id/img_foto_mascota_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/foto_mascota"
            android:scaleType="fitCenter"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/m2" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/marjen_top">


            <ImageView
                android:id="@+id/img_hueso_blanco_top"
                android:layout_width="@dimen/hueso"
                android:layout_height="@dimen/hueso"
                android:layout_centerVertical="true"
                android:padding="0dp"
                />


            <TextView
                android:id="@+id/tv_nombre_mascota_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/img_hueso_blanco_top"
                android:paddingLeft="@dimen/left"
                android:text="@string/nombre_mascota"
                android:textSize="@dimen/size_texto" />


            <ImageView
                android:id="@+id/img_hueso_color_top"
                android:layout_width="@dimen/hueso"
                android:layout_height="@dimen/hueso"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/hueso_color" />


            <TextView
                android:id="@+id/tv_puntos_mascota_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/img_hueso_color_top"
                android:paddingRight="@dimen/left"
                android:text="@string/puntos_mascota"
                android:textSize="@dimen/size_texto" />



        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>